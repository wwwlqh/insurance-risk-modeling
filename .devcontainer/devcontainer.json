{
  "name": "Insurance Risk Modeling",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  "postCreateCommand": "git lfs install && git lfs pull && pip install -r requirements.txt -r requirements-streamlit.txt pytest httpx",

  "forwardPorts": [8000, 8501],
  "portsAttributes": {
    "8000": { "label": "FastAPI", "onAutoForward": "notify" },
    "8501": { "label": "Streamlit", "onAutoForward": "notify" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
